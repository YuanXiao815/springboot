<!doctype html>
<html lang="zh">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>登录</title>
<link rel="stylesheet" type="text/css" href="${basePath}/css/styles.css">
</head>
<body>
<div class="htmleaf-container">
	<div class="wrapper">
		<div class="container">
			<h1>Welcome to ...</h1>
			<h3 class="out" hidden="hidden"></h3>
			
			<form class="form">
				<input type="text" id="account" placeholder="账户">
				<input type="password" id="password" placeholder="密码">
				<button type="button" id="login-button">登录</button>
				<button type="button" id="accredit-button">注册</button>
			</form>
		</div>
		
		<ul class="bg-bubbles">
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
	</div>
</div>

<script src="${basePath}/js/jquery-2.1.1.min.js" type="text/javascript"></script>
<script>
	$(function(){
		
		//点击注册授权
		$("#accredit-button").on("click",function(){
			window.location.href="http://localhost:8080/admin/accredit";
		});
		
		//点击登录
		$('#login-button').on("click",function(){
			var account=$("#account").val();
			var password=$("#password").val();
			if(account==null||""==account || password==null||""==password ){
				$(".out").fadeIn().html("请输入账户和密码！");
				$("#account").val("").focus();
				$("#password").val("");
			}else{
				$.ajax({
					type:"post",
					url:"/login/loged/"+account+"/"+password,
					beforsSend:function(){
						console.log("登陆中...");
					},
					error:function(err){
						console.log("error..."+err);
					},
					success:function(data){
						if(data=="success"){
							window.location.href="http://localhost:8080/admin/index";
						}else{
							$(".out").fadeIn().html("登录失败！");
							$("#account").val("").focus();
							$("#password").val("");
						}
					}
				});
			}
		});
	});
/* $('.wrapper').click(function () {
	$('.wrapper').removeClass('form-success');
	$('form').fadeIn();
}); */
</script>
<div style="text-align:center;margin:50px 0; font:normal 14px/24px 'MicroSoft YaHei';color:#000000">
<h1>博客管理系统</h1>
</div>
</body>
</html>